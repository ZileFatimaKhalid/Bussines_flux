<% if @bussinesses.blank? %>
	<p>There are no bussiness currently</p>
<% else %>
	<p>These are the current bussinesses in our system</p>
<% end %>	

	<h1>Bussinesss</h1>

	<table>
	  <thead>
	    <tr>
	      <th>Title</th>
	      <th>Description</th>
	      <th>Total Tasks</th>
	      <th>Team Members</th>
	     
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	  	<% @bussinesses.each do |b| %>
	  		<tr>
		      <td><%= b.title %></td>
		      <td><%= b.description %></td>
		      <td><%= b.tasks.count %></td>
		      <td><%= b.team_members.count %></td>
              <td><%= link_to 'Show', b %></td>

		      <% if current_user.user_type == "support"%>
              <td><%= link_to 'Edit', edit_bussiness_path(b) %></td>
              <td><%= link_to 'New Bussiness', new_bussiness_path %></td>
              <% end %>
		    </tr>
	  	<% end %>
	  </tbody>
	</table>
    
    <br>


<%= link_to 'New Tasks', new_task_path %>&nbsp;&nbsp;&nbsp;
<%= link_to 'Back to Home Page', pages_home_path %>

