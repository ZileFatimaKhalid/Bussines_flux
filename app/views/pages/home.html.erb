<h1>WELCOME TO THE APPLICATION</h1>

<%= image_tag "image.png", height: 300 %>

<% if current_user %>
<%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
 <% else %>
 <%= link_to 'Sign in', new_user_session_path %>
  <% end %>

 <h1>Bussinesss</h1>

	<table>
	  <thead>
	    <tr>
	      <th>Title</th>
	      <th>Description</th>
	  
	      <th colspan="3"></th>
	    </tr>
	  </thead>
        

	  <tbody>
	  	<% @posts.each do |p| %>
	  		<tr>
		      <td><%= p.title %></td>
		      <td><%= p.description %></td>
		      <td><%= link_to 'Show', p %></td>
		       
		    </tr>
	  	<% end %>
	  </tbody>
	</table>
 <h1>Tasks</h1>

	<table>
	  <thead>
	    <tr>
	      <th>Title</th>
	      <th>Task Type</th>&nbsp;&nbsp;
	      <th> User Id</th>&nbsp;&nbsp;
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	  	<% @tk.each do |t| %>
	  		<tr>
		      <td><%= t.title %></td>
		      <td><%= t.task_type %></td>
		      <td><%= t.due_date %></td>
		      <td><%= t.user.email %></td>
		      <td><%= link_to 'Show', t %></td>
		    </tr>
	  	<% end %>
	  </tbody>
	</table>
    
    <br>
<%= link_to 'New Bussiness', new_bussiness_path %>&nbsp;&nbsp;
<%= link_to 'New Tasks', new_task_path %>

