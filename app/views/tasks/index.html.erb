<% if @tasks.blank? %>
	<p>There are no tasks available currently</p>
<% else %>
	<p>These are the current tasks in our system</p>
<% end %>	

	<h1>Tasks</h1>

	<table>
	  <thead>
	    <tr>
	      <th>Title</th>
	      <th>Task Type</th>
	      <th>Due Date</th>
	      <th> Assignee ID</th>
	      <th> Business</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	  	<% @tasks.each do |t| %>
	  		<tr>
		      <td><%= t.title %></td>
		      <td><%= t.task_type %></td>
		      <td><%= t.due_date %></td>
		      <td><%= t.user.email%></td>
		     



		      <td><%= link_to 'Show', t %></td>
              <td><%= link_to 'Edit', edit_task_path(t) %></td>
		    </tr>

		    </tr>
	  	<% end %>
	  </tbody>
	</table>
    
    <br>

<%= link_to 'New Tasks', new_task_path %>&nbsp;&nbsp;
<%= link_to 'Home page', pages_home_path %> 


